@model ListCrudIslemleriOdev3.Models.Book

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Kitap Düzenle</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>Kitap Düzenle</h2>
    <form asp-action="Edit" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label>Başlık</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label>Yazar</label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="form-group">
            <label>Yayın Yılı</label>
            <input asp-for="PublishedYear" class="form-control" />
        </div>
        <div class="form-group">
            <label>Fiyat</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">İptal</a>
    </form>
</div>
</body>
</html>
