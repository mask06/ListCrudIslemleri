@model ListCrudIslemleriOdev3.Models.Book

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>Kitap Sil</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>Kitap Sil</h2>
    <p><strong>@Model.Title</strong> adlı kitabı silmek istediğinizden emin misiniz?</p>
    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">İptal</a>
    </form>
</div>
</body>
</html>
